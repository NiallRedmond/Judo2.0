<p id="notice"><%= notice %></p>

<p>
  <strong>Match name:</strong>
  <%= @match.match_name %>
</p>

<p>
  <strong>Victor:</strong>
  <% if @match.result == true %>
  <%=@match.student.student_name%>
  <% else %>
  <%= @match.opposition.student_name %>
  <% end %>
</p>

<p>
  <strong>Match points:</strong>
  <%= @match.match_points %>
</p>

<p>
  <strong>Student:</strong>
  <%= @match.student.student_name %>
</p>
<p>
  <strong>Opponent:</strong>
  <%= @match.opposition.student_name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @match.address %>
</p>



<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@match.latitude},#{@match.longitude}&markers=#{@match.latitude},#{@match.longitude}&zoom=15&size=640x400&key=AIzaSyA4BHW3txEdqfxzdTlPwaHsYRSZbfeIcd8",
              class: 'img-fluid img-rounded'%>
